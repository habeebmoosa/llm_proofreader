{
    "manifest_version": 3,
    "name": "LLM Proof Reader",
    "version": "1.0",
    "description": "Proofread LLM generated content",
    "permissions": [
        "activeTab",
        "scripting",
        "sidePanel",
        "contextMenus",
        "storage"
    ],
    "side_panel": {
      "default_path": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["libs/showdown.min.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
