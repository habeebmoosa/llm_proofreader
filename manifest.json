{
    "manifest_version": 3,
    "name": "AI Proofreader",
    "version": "1.0",
    "description": "Proofread content using Chrome's built-in AI",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["libs/showdown.min.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
